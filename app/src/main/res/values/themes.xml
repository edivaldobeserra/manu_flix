<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ManuFlix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/cor_bg_app</item>
        <item name="colorPrimaryDark">@color/cor_bg_app</item>
        <item name="colorPrimaryVariant">@color/cor_ic</item>
        <item name="colorOnPrimary">#E91E63</item>
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#4CAF50</item>
        <item name="colorOnSecondary">#ffffff</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ManuFlix" parent="Base.Theme.ManuFlix" />


    <style name="SearchViewTheme">

        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:editTextColor">@color/white</item>

    </style>
    <style name="SeekBarTheme">

        <item name="android:progressBackgroundTint">@color/cor_ic_dark</item>
        <item name="android:progressTint">@color/cor_ic</item>
        <item name="android:colorControlActivated">@color/cor_ic</item>

    </style>

    SeekBar
</resources>